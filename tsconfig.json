{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@zemo/shared": ["./packages/shared/dist"],
      "@zemo/api": ["./apps/api/dist"],
      "@zemo/worker": ["./apps/worker/dist"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}